<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.platform.modules.qkj.dao.QkjOaLeaveDao">

    <sql id="selectSql">
        SELECT
        T.ID,
        T.LEAVE_TYPE,
        T.LEAVE_TITLE,
        T.START_TIME,
        T.END_TIME,
        T.LEAVE_CAUSE,
        T.ADD_TIME,
        T.ADD_USER,
        T.ADD_DEPT
        FROM QKJ_OA_LEAVE T
        WHERE 1=1
        <if test="params.name != null and params.name.trim() != ''">
            AND T.NAME LIKE '%${params.name}%'
        </if>
    </sql>

    <select id="selectQkjOaLeavePage" resultType="com.platform.modules.qkj.entity.QkjOaLeaveEntity">
        <include refid="selectSql"/>
    </select>

    <select id="queryAll" resultType="com.platform.modules.qkj.entity.QkjOaLeaveEntity">
        <include refid="selectSql"/>
    </select>
</mapper>