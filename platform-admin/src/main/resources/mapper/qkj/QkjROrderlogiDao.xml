<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.platform.modules.qkj.dao.QkjROrderlogiDao">

    <sql id="selectSql">
        SELECT
        T.*,s.number number,u.REAL_NAME maniname,s.creatuser creatuser
        FROM QKJ_R_ORDERLOGI T
        join qkj_r_order s on (t.orderid=s.id)
        join sys_user u on (s.userid=u.USER_ID)
        WHERE 1=1
        <if test="params.name != null and params.name.trim() != ''">
            AND T.NAME LIKE '%${params.name}%'
        </if>
        <if test="params.orderid != null and params.orderid.trim() != ''">
            AND T.orderid LIKE '%${params.orderid}%'
        </if>
        <if test="params.id != null and params.id.trim() != ''">
            AND T.id LIKE '%${params.id}%'
        </if>
    </sql>

    <select id="selectQkjROrderlogiPage" resultType="com.platform.modules.qkj.entity.QkjROrderlogiEntity">
        <include refid="selectSql"/>
    </select>

    <select id="queryAll" resultType="com.platform.modules.qkj.entity.QkjROrderlogiEntity">
        <include refid="selectSql"/>
    </select>
</mapper>