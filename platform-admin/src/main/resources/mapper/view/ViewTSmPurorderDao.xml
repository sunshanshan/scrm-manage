<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.platform.modules.view.dao.ViewTSmPurorderDao">

    <sql id="selectSql">
        SELECT
        T.*
        FROM VIEW_T_SM_PURORDER T
        WHERE 1=1 and ISNULL(T.materielid, 'tt')!='tt'
        <if test="params.startDate != null and params.startDate.trim() != ''">
            AND t.fcreateTime>='${params.startDate}'
        </if>
        <if test="params.endDate != null and params.endDate.trim() != ''">
            AND t.fcreateTime &lt;'${params.endDate}'
        </if>
        <if test="params.id != null and params.id.trim() != ''">
            AND t.id ='${params.id}'
        </if>
    </sql>

    <sql id="selectSqlMain">
        SELECT DISTINCT id,stsdate,number,userid,FCreateTime,FBaseStatus from view_T_SM_PurOrder
        WHERE 1=1
        <if test="params.startDate != null and params.startDate.trim() != ''">
            AND fcreateTime>='${params.startDate}'
        </if>
        <if test="params.endDate != null and params.endDate.trim() != ''">
            AND fcreateTime &lt;'${params.endDate}'
        </if>
    </sql>

    <select id="selectViewTSmPurorderPage" resultType="com.platform.modules.view.entity.ViewTSmPurorderEntity">
        <include refid="selectSql"/>
    </select>

    <select id="queryAll" resultType="com.platform.modules.view.entity.ViewTSmPurorderEntity">
        <include refid="selectSql"/>
    </select>

    <select id="queryAllMain" resultType="com.platform.modules.view.entity.ViewTSmPurorderEntity">
        <include refid="selectSqlMain"/>
    </select>
</mapper>