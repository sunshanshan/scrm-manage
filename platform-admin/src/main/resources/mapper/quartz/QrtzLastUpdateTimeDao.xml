	<update id="updateMemberLastDatetime" parameterType="com.platform.modules.quartz.entity.QrtzLastUpdateTimeEntity">
		UPDATE qkjvip_lastupdatetime SET member_last_datetime = #{memberLastDatetime} WHERE id = #{id}
